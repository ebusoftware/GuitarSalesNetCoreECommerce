@model IEnumerable<SA_GitarProjeCore.Models.Customers>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-sm btn-primary ml-1">Create New</a>
    </p>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Address
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Tax Number
                </th>
                <th>
                    E-Mail
                </th>
                <th>
                    City
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Addresses)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaxNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Citys.CityName)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-success"><i class="bi bi-pencil"></i>Edit</a>
                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning ml-1"><i class="bi bi-ticket-detailed"></i>Details</a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger ml-1"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/English.json"
            }});
    });

    </script>
}

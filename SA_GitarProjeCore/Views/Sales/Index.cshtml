@model IEnumerable<SA_GitarProjeCore.Models.Sales>

@{
    ViewData["Title"] = "Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-sm btn-primary ml-1">Create New</a>
    </p>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    <div>
                        Unit Price
                    </div>
                </th>
                <th>
                    Number
                </th>
                <th>
                    Date
                </th>
                <th>
                    Product
                </th>
                <th>
                    Customer
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Products.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customers.FirstName)
                        @Html.DisplayFor(modelItem => item.Customers.LastName)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.SaleId" class="btn btn-success"><i class="bi bi-pencil"></i>Edit</a>
                            <a asp-action="Details" asp-route-id="@item.SaleId" class="btn btn-sm btn-warning ml-1"><i class="bi bi-ticket-detailed"></i>Details</a>
                            <a asp-action="Delete" asp-route-id="@item.SaleId" class="btn btn-sm btn-danger ml-1"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/English.json"
                }
            });
        });

    </script>
}